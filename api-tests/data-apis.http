### Validate payload against schema - Valid payload
POST {{baseUrl}}/api/app/ecommerce-app/data/users/v1/validate
Content-Type: application/json
Authorization: {{authToken}}
Host: {{tenantHost}}

{
  "name": "Test User",
  "email": "test@example.com",
  "age": 25,
  "address": {
    "street": "123 Test St",
    "city": "Test City",
    "country": "Test Country"
  },
  "tags": ["test", "validation"]
}

> {% 
client.test("Valid payload validation passed", function() {
    client.assert(response.status === 200, "Expected status 200 - OK");
    client.assert(response.body.valid === true, "Validation should pass");
});
%}

